class Solution {
public:
    void setZeroes(vector<vector<int>>& matrix) {
        int r = matrix.size();
        if(r==0)
            return;
        int c = matrix[0].size();
        set<int> row;
        set<int> col;
        for(int i=0; i<r; i++){
            for(int j=0; j<c; j++){
                if(matrix[i][j]==0){
                    row.insert(i);
                    col.insert(j);
                }
            }
        }
        for(auto it:row){
            for(int i=0; i<c; i++)
                matrix[it][i]=0;
        }
        for(auto it:col){
            for(int i=0; i<r; i++)
                matrix[i][it]=0;
        }
        return;
    }
};

