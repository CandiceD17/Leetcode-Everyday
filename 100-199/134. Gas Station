class Solution {
public:
    int canCompleteCircuit(vector<int>& gas, vector<int>& cost) {
        int size = gas.size();
        if(size==0)
            return 0;
        vector<int> diff;
        vector<int> posi;
        for(int i=0; i<size; i++){
            int num = gas[i]-cost[i];
            diff.push_back(num);
            if(num>=0)
                posi.push_back(i);
        }
        if(posi.empty())
            return -1;
        for(int i=0; i<posi.size(); i++){
            int sum = 0;
            for(int j = posi[i], count = 0; count<size; j++, count++){
                sum+=diff[j%size];
                if(sum<0)
                    break;
                if(count == size-1)
                    return posi[i];
            }
        }
        return -1;
    }
};

